rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the project owner
    function isOwner(projectData) {
      return request.auth.token.email == projectData.ownerEmail;
    }
    
    // Helper function to check if project is public
    function isPublicProject(projectData) {
      return projectData.licenceKey == 'public';
    }
    
    // Projects collection rules
    match /projects/{projectId} {
      // Allow read (both list and get) if authenticated
      // For queries, only return documents where user is owner OR project is public
      allow read: if isAuthenticated() &&
                     (resource == null || isPublicProject(resource.data) || isOwner(resource.data));
      
      // Allow create if:
      // - User is authenticated AND
      // - The ownerEmail in the new document matches the authenticated user's email
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerEmail == request.auth.token.email;
      
      // Allow update/delete if:
      // - User is authenticated AND
      // - User is the owner
      allow update, delete: if isAuthenticated() && isOwner(resource.data);
      
      // Project objects subcollection
      match /objects/{objectId} {
        // Allow read if authenticated and parent project exists and is readable
        allow read: if isAuthenticated() && 
                       exists(/databases/$(database)/documents/projects/$(projectId)) &&
                       (isPublicProject(get(/databases/$(database)/documents/projects/$(projectId)).data) || 
                        isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data));
        
        // Allow create if user is authenticated (parent project ownership will be verified separately)
        allow create: if isAuthenticated();
        
        // Allow update/delete if user owns the parent project
        allow update, delete: if isAuthenticated() && 
                                 exists(/databases/$(database)/documents/projects/$(projectId)) &&
                                 isOwner(get(/databases/$(database)/documents/projects/$(projectId)).data);
      }
    }
    
    // Users collection (if you add one in the future)
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
